#! /bin/bash

# Global variable for NixOS config directory
NIX_CONFIG_DIR="/home/khernand/Documents/code/nixos-config"
BRANCH="main"

# Helper function: Change to flake directory
enter_flake_dir() {
  if [ ! -d "$NIX_CONFIG_DIR" ]; then
    echo "âŒ Error: Flake directory not found: $NIX_CONFIG_DIR"
    return 1
  fi
  pushd "$NIX_CONFIG_DIR" > /dev/null
}

# Helper function: Check if directory is a Git repo
is_git_repo() {
  git rev-parse --is-inside-work-tree > /dev/null 2>&1
}

# Helper function: Add and commit changes to Git
git_commit_push() {
  if is_git_repo; then
    git add .
    git commit -m "chore(nix): Auto-update $(date -I)"
    git push origin "$BRANCH"
    echo "ğŸš€ Changes committed and pushed to $BRANCH."
  else
    echo "âš  Warning: Not a Git repository, skipping commit and push."
  fi
}

# Function: Update flake.lock and add it to Git
nix-update() {
  enter_flake_dir || return
  echo "ğŸ”„ Updating Nix flake..."
  nix flake update
  if is_git_repo; then
    git add flake.lock
    echo "âœ… flake.lock added to Git."
  else
    echo "âš  Warning: Not a Git repository, skipping Git add."
  fi
  popd > /dev/null
}

# Function: Add all files to Git and rebuild NixOS
nix-rebuild() {
  enter_flake_dir || return
  if is_git_repo; then
    git add .
    echo "âœ… All changes added to Git."
  else
    echo "âš  Warning: Not a Git repository, skipping Git add."
  fi
  echo "ğŸ›  Running NixOS rebuild..."
  sudo nixos-rebuild switch --flake "$NIX_CONFIG_DIR#desktop"
  popd > /dev/null
}

# Function: Full update (nix-update + nix-rebuild)
nix-full-update() {
  nix-update
  nix-rebuild
}

# Function: Commit and push all changes to Git
nix-persist() {
  enter_flake_dir || return
  git_commit_push
  popd > /dev/null
}

# Function: Update only `dotfiles` dependency, rebuild, and persist
nix-update-dotfiles() {
  enter_flake_dir || return
  echo "ğŸ”„ Updating flake input: dotfiles..."
  nix flake update --update-input dotfiles
  if is_git_repo; then
    git add flake.lock
    echo "âœ… Updated and added flake.lock for dotfiles"
  else
    echo "âš  Warning: Not a Git repository, skipping Git add."
  fi
  echo "ğŸ›  Running NixOS rebuild..."
  sudo nixos-rebuild switch --flake "$NIX_CONFIG_DIR#desktop"
  popd > /dev/null
  echo "ğŸš€ Running nix-persist..."
  nix-persist
}
